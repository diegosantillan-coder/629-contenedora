#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo INFO: Se inicializa hook pre push pruebas unitarias antes de publicar el cambio

set +e

npm run test -- --code-coverage=true --browsers=ChromeHeadless --watch=false 2>/dev/null
if [ $? -ne 0 ]; then
  echo "ERROR: se ha presentado un error al ejecutar validaci√≥n del cambio (npm run test -- --code-coverage=true --browsers=ChromeHeadless --watch=false)"
  exit 1;
fi

exit 0;
